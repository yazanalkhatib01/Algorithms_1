#include <iostream>
#include <string>
using namespace std;

void Read_Numbers(float& a,float& h) {

	cout << "Enter Number A: " << endl;
	cin >> a;

	cout << "Enter Number H: " << endl;
	cin >> h;
}

float Triangle_Area(float a, float h) {
	
	float Area = (a / 2) * h;//Pro Solution

	return Area;
}

void Print_Result(float Area) {

	cout << "\n Reactangle Area= " << Area << endl;
}

int main()
{//17 Solution

	float num1, num2;
	Read_Numbers(num1, num2);
	Print_Result(Triangle_Area(num1, num2));

	return 0;
}
