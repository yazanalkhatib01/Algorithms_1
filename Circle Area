#include <iostream>
#include <string>
using namespace std;

float Read_Radious() {

	float r;
	cout << "Enter radious R: " << endl;
	cin >> r;
	return r;
}

float Circle_Area(float r) {
	
	const float PI= 3.141592653589793238462643383279502884197;
	
	float Area = PI * pow(r, 2);
	return Area;
}

void Print_Result(float Area) {

	cout << "\n Circle Area= " << Area << endl;
}

int main()
{//18 Pro Solution

	Print_Result(Circle_Area(Read_Radious()));

	return 0;
}
