#include <iostream>
#include <string>
using namespace std;


int ReadNumber() {

	int num;
	cout << "Enter Number ?" << endl;
	cin >> num;

	return num;
}

float HalfNumber(int num) {

	return (float)num / 2;
}

void PrentNumber(int num) {

	string result = "Half of " + to_string(num) + " is " + to_string(HalfNumber(num));

	cout << "\n" << result << "\n" << endl;

}

int main()
{//7 Pro Solution
	
	PrentNumber(ReadNumber());

	return 0;
}
